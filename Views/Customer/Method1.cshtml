@model web_app_1.Views.Customer.Method1
@{
}

<h1>Method1</h1>

<div>
    <h3>@TempData["Message"]</h3>
    <p>There are @TempData["CustomerCount"] customers added into the list.</p>

    <table>
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Customer Name</th>
                <th>Customer Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in TempData["CustomerList"] as List<Customer>)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Amount</td>
                </tr>
            }
        </tbody>
    </table>

    @{
        TempData.Keep("Message");
    }

    <a asp-controller="Customer" asp-action="Method2">Go to Method2</a>
    
</div>