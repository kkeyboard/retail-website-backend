
@model web_app_1.Views.Customer.Details
@{
    Layout = "_Layout";
}

<h1>Details</h1>

<div>
    <h3>@ViewData["Message"]</h3>
    <p>There are @ViewData["CustomerCount"] customers added into the list.</p>

    <table>
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Customer Name</th>
                <th>Customer Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in ViewData["CustomerList"] as List<Customer>)
            {
                <tr>
                    <td>@item.CustomerId</td>
                    <td>@item.CustomerName</td>
                    <td>@item.CustomerAmount</td>
                </tr>
            }
        </tbody>
    </table>
    
</div>